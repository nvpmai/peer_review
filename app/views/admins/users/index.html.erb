<%= render 'new' %>
<div class="ui left floated vertical segment">
  <h1 class="ui header">Users</h1>
</div>
<div class="ui right floated segment vertical">
  <a class="ui green button" onclick="showNewUserModal()">Add</a>
</div>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
        </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3">
        <div class="ui right floated pagination" id="pagination">
          <%= paginate @users %>
        </div>
      </th>
    </tr>
  </tfoot>
</table>

<script>
  function showNewUserModal() {
    $('#new_user_modal').modal('show')
  }
</script>
