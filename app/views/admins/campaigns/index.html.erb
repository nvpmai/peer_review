<div class="ui masthead vertical segment">
  <div class="ui container">
    <h1 class="ui header">Campaigns</h1>
  </div>
</div>
<div class="ui container">
  <table class="ui celled table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Created at</th>
        <th width="200px"></th>
      </tr>
    </thead>
    <tbody>
      <% @result.each do |campaign| %>
          <tr>
            <td><%= campaign.name %></td>
            <td><%= campaign.created_at.strftime("%d/%m/%Y") %></td>
            <td>
              <a class="ui teal button">Edit</a>
              <a data-method='delete' data-confirm='Are you sure you want to delete this?'
                 class="ui red button">Delete</a>
            </td>
          </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">
          <div class="ui right floated pagination" id="pagination">
            <%= paginate @result %>
          </div>
        </th>
      </tr>
    </tfoot>
  </table>
</div>
